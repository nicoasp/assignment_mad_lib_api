{{#if result}}
	<h2>Your madlib!:</h2>
	<p>{{result}}</p>
{{/if}}


<h2>Make your Madlib</h2>
<form class="" action="/" method="post">
  <div class="form-group">
    <label for="text">Text</label>
    <textarea name="text" id="text" placeholder="Write your text here"></textarea>
  </div>
  <div class="form-group">
    <label for="words">Words</label>
    <textarea name="words" id="words" placeholder="Here a list of words"></textarea>
  </div>
  <button class="btn btn-default">Get madlib!</button>
</form>
